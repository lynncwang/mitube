<div class="container">
  <h1>New video</h1>

  <%= form_for @video do |f| %>
    <%= render 'shared/errors', object: @video %>

    <div class="form-group">
      <%= f.label :link, 'Link to my fly video' %>
      <%= f.text_field :link, class: 'form-control', required: true %>
      <span class="help-block">Link to my fly video on Youtube.</span>
    </div>

    <%= f.submit class: 'btn btn-default' %>
  <% end %>
</div>